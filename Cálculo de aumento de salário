<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salariado</title>
    
    <script>
        
        const cargo = prompt("Digite um cargo")
        const salario = prompt("Digite o salário")
        let aumento = 0
    
        switch(cargo) {
            case 'Estagiário':
                aumento = '1';
                break 
            case 'Analista':
                aumento = '0.5'
                break
            case 'Gerente':
                aumento = '0.3'
                break
            case 'Presidente':
                aumento = '0.1'
                break    
            default: alert('Escolha um cargo válido')

            }
            const novosalario = salario + (salario * aumento)
            console.log('o novo salário é ' + novosalario)

</script>
</head>
<body>
    
</body>
</html>
